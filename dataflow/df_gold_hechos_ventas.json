{
	"name": "df_gold_hechos_ventas",
	"properties": {
		"folder": {
			"name": "GOLD"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_silver_ventas",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "ds_gold_dim_bd",
						"type": "DatasetReference"
					},
					"name": "bd"
				},
				{
					"dataset": {
						"referenceName": "ds_gold_dim_catmant",
						"type": "DatasetReference"
					},
					"name": "catmant"
				},
				{
					"dataset": {
						"referenceName": "ds_gold_dim_clientes",
						"type": "DatasetReference"
					},
					"name": "clientes"
				},
				{
					"dataset": {
						"referenceName": "ds_gold_dim_productos",
						"type": "DatasetReference"
					},
					"name": "productos"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_gold_hechos_ventas",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "cast1"
				},
				{
					"name": "lookup1"
				},
				{
					"name": "lookup2"
				},
				{
					"name": "lookup3"
				},
				{
					"name": "lookup4"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          sls_ord_num as string,",
				"          prd_nm as string,",
				"          sls_cust_id as integer,",
				"          sls_order_dt as integer,",
				"          sls_ship_dt as integer,",
				"          sls_sales as integer,",
				"          sls_quantity as integer,",
				"          sls_price as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"source(output(",
				"          fecha as date,",
				"          id_bd as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT DISTINCT fecha, id_bd FROM GOLD.dim_bd',",
				"     format: 'query') ~> bd",
				"source(output(",
				"          id_catmant as integer,",
				"          code as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT DISTINCT id_catmant, code FROM GOLD.dim_catmant',",
				"     format: 'query') ~> catmant",
				"source(output(",
				"          fecha_nacimiento as date,",
				"          id_cliente as integer,",
				"          cst_id as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT DISTINCT fecha_nacimiento, id_cliente, cst_id FROM GOLD.dim_clientes',",
				"     format: 'query') ~> clientes",
				"source(output(",
				"          nombre as string,",
				"          prd_key as string,",
				"          id_producto as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT DISTINCT nombre, prd_key, id_producto FROM GOLD.dim_productos',",
				"     format: 'query') ~> productos",
				"source1 cast(output(",
				"          sls_cust_id as string,",
				"          sls_price as decimal(10,0)",
				"     ),",
				"     errors: true) ~> cast1",
				"cast1, clientes lookup(sls_cust_id == cst_id,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup1",
				"lookup1, bd lookup(fecha_nacimiento == fecha,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup2",
				"lookup2, derivedColumn1 lookup(prd_nm == nombre,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup3",
				"lookup3, catmant lookup(prd_key == code,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup4",
				"productos derive(prd_key = replace(prd_key, '-', ' ')) ~> derivedColumn1",
				"lookup4 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          id_venta as integer,",
				"          id_cliente as integer,",
				"          id_producto as integer,",
				"          id_bd as integer,",
				"          id_catmant as integer,",
				"          cantidad as integer,",
				"          precio_unitario as decimal(18,0),",
				"          canal_venta as string,",
				"          ord_dt as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          id_cliente,",
				"          id_producto,",
				"          id_bd,",
				"          id_catmant,",
				"          cantidad = sls_quantity,",
				"          precio_unitario = sls_price,",
				"          canal_venta = sls_ship_dt,",
				"          ord_dt = sls_order_dt",
				"     )) ~> sink1"
			]
		}
	}
}